{
  "manifest_version": 3,
  "name": "Tab Anxiety",
  "version": "2.0",
  "description": "Triage your tabs before they triage you.",
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "tabGroups",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tab Anxiety"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "omnibox": {
    "keyword": "ta"
  },
  "commands": {
    "triage-tab": {
      "suggested_key": { "default": "Alt+W", "mac": "Alt+W" },
      "description": "Triage current tab (save + close)"
    },
    "assign-group": {
      "suggested_key": { "default": "Alt+G", "mac": "Alt+G" },
      "description": "Assign current tab to a group"
    },
    "scratchpad": {
      "suggested_key": { "default": "Alt+Q", "mac": "Alt+Q" },
      "description": "Capture idea without opening a tab"
    },
    "annotate-tab": {
      "suggested_key": { "default": "Alt+A", "mac": "Alt+A" },
      "description": "Annotate current tab with note/keywords (no close)"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
